<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/movie_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="3dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true"
        android:background="@color/primary"
        android:id="@+id/img_soon_movie"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true" />
        <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/imageview_gradient" />
    </FrameLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <TextView
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_soon_name"
                android:text="Название"
                android:layout_alignParentBottom="true"
            android:typeface="normal"
            android:textAppearance="@style/TextAppearance.Design.CollapsingToolbar.Expanded.Shadow"
            android:textSize="20sp"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/ratingSoonText"
            android:paddingLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.0"
            android:typeface="normal"
            android:textAppearance="@style/TextAppearance.Design.CollapsingToolbar.Expanded.Shadow"
            android:textSize="20sp"
            android:textAllCaps="false"/>
        <TextView
            android:id="@+id/dateSoonText"
            android:paddingLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.0"
            android:typeface="normal"
            android:textAppearance="@style/TextAppearance.Design.CollapsingToolbar.Expanded.Shadow"
            android:textSize="20sp"
            android:textAllCaps="false"/>

    </LinearLayout>

</android.support.v7.widget.CardView>